<%- include("../partials/header") %>
<div class="container form">
  <div class="authForm">

  <div class="text-center">
    <form class="form-signin" action="/campground/<%=camp._id%>?_method=PUT" method="POST" >
      <h1 class="h3 mb-3 font-weight-normal">Add a New Campground</h1>
      <input type="text" class="form-control mb-2" value="<%=camp.name %>" name="campground[name]" required autofocus>
      <input type="text" class="form-control mb-2" value="<%=camp.image %>" name="campground[image]" required>
      <input type="number" class="form-control mb-2" value="<%=camp.price%>" name="campground[price]" required>

      <input type="text" class="form-control mb-2" value="<%=camp.description %>" name="campground[description]" required>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    </form>
  </div>
  </div>
</div>

<%- include("../partials/footer") %>




