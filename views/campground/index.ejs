<%- include("../partials/header") %>
<div class="container index">
<div>
<div class="jumbotron " style="padding-left: 70px;">
<h1><i class="gripfire icon"></i>WELCOME TO MEMORIESBOOK</h1>
<p>The one stop destination to share and relive all your memories!!</p>
<a href="/campground/new"><button class="btn btn-light" >Add a New Memory</button></a>

</div>
</div>

<div>
<div class="row">
<% camps.forEach(function(camps){ %>
    <div class="col-sm-6 col-md-4 col-lg-3"  >
    <div class="card" style="margin-bottom: 50px; margin-left: 15px; margin-right: 15px;">
        <img class="card-img-top" src="<%= camps.image %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title" style="text-align: center;"><%= camps.name %></h5>
          <div class="trybutton"><a class="btn btn-dark" style=" border-radius: 12px;" href="/campground/<%= camps._id %>" >Know More</a></div>
        </div>
      </div>
    </div>
<%})%>
</div>
</div>
</div>

